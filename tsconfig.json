{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "Snabbdom.createElement",
    "lib": [
      "dom",
      "es2015",
      "es2015.promise",
      "es2016.array.include"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5",

    "typeRoots": [
      "./types",
      "./node_modules/@types/"
    ]
  }
}
